<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-6 offset-3 mb-2">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <p>Owned by <i><%= listing.owner.username %></i></p>
        <p class="text-align"><%= listing.description %></p>
        <p><b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b> <i style="font-size: 0.75rem;">Per day</i></p>
        <p><%= listing.location %></p>
        <p><%= listing.country %></p>
      </p>
    </div>
  </div>

  <br>

 <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3"
      >Edit</a
    >

    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
  <% } %>
  
  <div class="col-6 offset-3">
    <% if(currUser) { %>
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <div>
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          placeholder="Write a review"
          id="comment"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comment for review</div>
        <br />
      </div>
      <button class="btn btn-dark">Submit</button>
    </form>
    <% } %>

    <hr />

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body mt-1">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p class="card-text text-align"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> stars</p>
        </div>
        <form
          class="mb-2"
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
