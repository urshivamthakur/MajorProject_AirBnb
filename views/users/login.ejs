<% layout("/layouts/boilerplate") %>

<div class="row mt-5 col-6 offset-2">
  <h2>Login</h2>
  <div class="">
    <form action="/user/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label mb-0">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div>
        <label for="password" class="form-label mb-0">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mt-3">Login</button>
    </form>
  </div>
</div>
